<% content_tag :div, :class => "fixed-side-ctrls" do %>
    <% content_tag :ul do %>
        <%= content_tag(:li, link_to(content_tag(:span, "Notifications", :class => "w170px"), notifications_path, :class => "button-green ".concat(([notifications_path, root_path].include? request.path) ? "current" : ""))) %>
        <%#= content_tag(:li, link_to(content_tag(:span, "My Wardrobes", :class => "w170px"), my_wardrobes_path, :class => "button-green ".concat(([my_wardrobes_path].include? request.path) ? "current" : ""))) %>
        <%#= content_tag(:li, link_to(content_tag(:span, "New Wardrobe", :class => "w170px"), product_catalog_path, :class => "button-green ".concat(([product_catalog_path].include? request.path) ? "current" : ""))) %>
        <%#= content_tag(:li, link_to(content_tag(:span, "Analytics", :class => "w170px"), analytics_path, :class => "button-green ".concat(([analytics_path].include? request.path) ? "current" : ""))) %>
        <%#= content_tag(:li, link_to(content_tag(:span, "Download", :class => "w170px"), download_emails_path, :class => "button-green ".concat(([download_emails_path].include? request.path) ? "current" : ""))) if Payment.count(:conditions => "email IS NOT NULL and email <> ''").to_i > 0 %>
    <% end %>
<% end %>